<div class="card h-100" data-aos="fade-up" data-aos-duration="1000">
  <%# Card-img %>
  <%= link_to gift_info.gift_url do %>
    <div class="position-relative overflow-hidden" >
      <% if gift_info.photo.nil? %>
        <%= image_tag "logo/grayscale.png", height: 120, crop: :fill %>
      <% else %>
        <%= image_tag gift_info.photo, height: 120, :style => "width: 100%; object-fit: cover"  %>
      <% end %>
    </div>
    <div class="position-absolute" style= "top: 8px; right: 10px">
      <h3>
      <%= link_to '<i class="fas fa-plus-circle"></i>'.html_safe, new_gift_gift_idea_path(gift_info) %>
      </h3>
    </div>
  <% end %>
  <%# Card-Body %>
  <div class="card-body p-0">
    <h6 class="card-title text-truncate text-primary p-2 mb-0"><%= gift_info.product_name.nil? ? gift_info.gift_url : gift_info.product_name %></h6>
    <div class="d-flex justify-content-between px-3">
      <p class="card-text mb-0"><%= gift_info.price %></p>
      <%=link_to '<i class="far fa-trash-alt"></i>'.html_safe, gift_path(gift_info), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
