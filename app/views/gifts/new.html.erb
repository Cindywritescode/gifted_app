<div class="container mx-auto">
  <div class="row justify-content-center">
    <div class="col-m-8 ">
    <h1 class="mb-3">Create a Gift</h1>
    <%= simple_form_for (@gift) do |f| %>
      <%= f.input :gift_url, placeholder: 'https://www.etsy.com/' %>
      <%= f.association :friends, as: :collection_select, :collection => Friend.where(user: current_user), :prompt => "Assign to a Friend", :include_blank => "(Select if none)"%>
      <%= f.submit "Create Gift", class: "btn  btn-gifted" %>
    <% end %>

  </div>
  </div>
</div>
