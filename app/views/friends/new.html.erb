<div class="container mx-auto">
  <div class="row justify-content-center">
    <div class="col-m-8">

      <div class="mb-4">
        <h2 class="mb-0 text-primary">Add a New Friend</h2>
        <small class="text-info" >Add friends to your account</small>
      </div>
      <div class="mx-3">
        <%= simple_form_for @friend do |f| %>
          <%= f.input :name, label: false, placeholder: 'friend\'s name' %>
          <%= f.input :photo, as: :file, label: "Add a Photo", class: 'text-primary font-weight-bold' %>
          <%= f.submit class: "btn  btn-gifted" %>
        <% end %>
      </div>

    </div>
  </div>
</div>