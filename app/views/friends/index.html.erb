<div class="friend-container">
  <h1>Your Friends</h1>

  <%# Search Bar %>
  <%= form_tag friends_path, method: :get do %>
  <div class="d-flex p-3">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a friend"
    %>
    <%#= submit_tag '<i class="far fa-search"></i>'.html_safe, class: "btn btn-primary" %>
    <%= button_tag(type: "submit", class: "btn btn-primary") do %>
    <i class="fas fa-search"></i>
    <% end %>
  <% end %>
  </div>
  <%# Search Bar END%>



  <%# Friend's image %>
  <div class="friend-grid">
  
  <% @friends.each do |friend| %>
      <div>
        <%# <div class="friend-circle"> %>
        <%= link_to friend_path(friend), class: "friend-circle" do %>
          <% if friend.photo.attached? %>
            <div>
            <%=  cl_image_tag friend.photo.key, height: 80, width: 80, gravity: :face, radius: :max, crop: :fill, style: "border-radius: 50%"  %>
            </div>
          <% else %>
            <div class="avatar-initials-large">
              <%= friend.name.first %><%= friend.name.split(' ')[1].first %>
            </div>
          <% end %>
        <% end %>
        
        <div class="d-flex justify-content-center p-2">
          <div class="pr-1 text-primary font-weight-bolder"><%= friend.name %></div>
          <%# Delete friend %>
          <div class= "delete">
            <%= link_to friend_path(friend),
              method: :delete, data: { confirm: "Are you sure you want to delete #{friend.name} from your friend list?" } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        </div>



        <!-- Button trigger modal -->
        <button type="button" class="btn btn-outline-primary friend-grid-btn" style="border-radius: 25px" data-bs-toggle="modal" data-bs-target="#friendModal<%= friend.id %>">
          <strong>Events</strong>
        </button>

        <!-- Modal -->
        <div class="modal fade" id="friendModal<%= friend.id %>"  tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
              <div class="modal-header">
                <div>
                 <%= link_to friend_path(friend), class: "friend-circle" do %>
                    <% if friend.photo.attached? %>
                      <div>
                      <%=  cl_image_tag friend.photo.key, height: 80, width: 80, gravity: :face, radius: :max, crop: :fill, style: "border-radius: 50%"  %>
                      </div>
                    <% else %>
                      <div class="avatar-initials-large">
                        <%= friend.name.first %><%= friend.name.split(' ')[1].first %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
                <h5 class="modal-title px-2 text-primary" id="exampleModalLabel"><%= friend.name.partition(" ").first %>'s events</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body d-flex">
                
                <%# Friend's events %>
                  <div class="friend-event">
                    <% if friend.events.count == 0 %>
                      <div class="pl-2">
                        <p>No Events Yet!</p>
                        <p><%= link_to 'Create a new event', 
                            new_friend_event_path(friend), 
                            class: "btn btn-outline-primary",
                            style: "border-radius: 25px" %></p>
                      </div>
                    <% else %>
                      <% friend.events.each do |event| %>
                      <div class="friend-event-info d-flex mb-2 ">
                        <h6><%= event.date.strftime("%d/%m") %></h6> 
                        <p class="event-info"><%= "#{event.event_type}" %></p>
                        <div class="friend-event-emoji">
                          <% if  event.event_type == 'Birthday'%>
                            <%= "🎂" %>
                          <% elsif event.event_type == 'Friendaversary'%>
                            <%= "👯‍♀️" %>
                          <% elsif event.event_type == 'Divorce Party' %>
                            <%= "💔" %>
                          <% elsif event.event_type == 'Graduation' %>
                            <%= "🎓" %>
                          <% elsif event.event_type == 'Baby Shower' %>
                            <%= "🐣" %>
                          <% elsif event.event_type == 'Anniversary' %>
                            <%= "💍" %>
                          <% elsif event.event_type == 'Wedding' %>
                            <%= "💒" %>
                          <% else %>
                            <%= "🥳" %>
                          <% end %>
                        </div>
                      </div>
                      <% end %>
                    <% end %>
                  </div>
                </div>
                <%# Friend's events END %>

                <%# Event link btn %>
                <div class="d-flex justify-content-between px-5 mb-4">
                  <div>
                    <%= link_to 'All event', friend_events_path(friend) , class: "btn btn-outline-primary", style: "border-radius: 25px" %>
                  </div>
                  <div>
                    <%= link_to 'Add event', 
                              new_friend_event_path(friend), 
                              class: "btn btn-primary",
                              style: "border-radius: 25px" %>
                  </div>
                </div>
                <%# Event link btn END%>

              </div>
              <%# <div class="modal-footer"> %>
                <%# <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button> %>
              <%# </div> %>
            </div>
          </div>
        </div>
        <!-- Modal END-->



  <% end %>
  </div>




  <br>
  <%= link_to 'Add a new friend', new_friend_path, class: "btn btn-gifted"  %>
</div>
